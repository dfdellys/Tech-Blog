<div class="row justify-content-md-center">
  <div class="col-sm-8" id="welcomeTitle">
    <h2> Welcome, {{name}}!</h2>
  </div>
  <p>
  <div class="col-sm-8">
    <div class="card">
      <div class="btn btn-primary align-middle" type="button" id="newPostBtn">Add a new post!</div>
    </div>
  </div>
  <p>
  <div class="col-sm-8" id="postScroller">


    {{#if posts.length}}

    {{#each posts as |post|}}

    <div class="col-sm-12">
      <div class="row justify-content-md-center">
        <div class="card mx-auto" id="postDashboardCards">
          <a href="/post/{{id}}">
            <div class="card-header">
              <p><span>
                  <h3>{{{post.title}}}</h3>
                </span> by You on {{format_date post.date_created}}</p>
            </div>
            <div class="card-body">
              <p>{{post.text}}</p>
            </div>
            <div class="card-footer">
              <button class="btn-success" style="float: right;" type="button">EDIT</button>
              <button class="btn-danger" style="float: right;" type="button">DELETE</button>
            </div>
          </a>
        </div>
      </div>
    </div>

    {{/each}}

    {{else}}

    <h2 style="margin: 30px">You don't have any posts!</h2>

    {{/if}}
  </div>
</div>

<script src="./js/dashboard.js"></script>