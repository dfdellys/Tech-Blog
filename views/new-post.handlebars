<div class='form-row justify-content-md-center'>
  <div class='col-sm-9'>
    <div class='card mx-auto' id='newPostCard'>
      <form id='newPostForm' class='justify-content-md-center'>
        <h2 class='col-sm-12' style='text-align: center;'>Post here!</h2>
        <div></div>
        <div class='form-group col-sm-12'>
          <label for='newPostAuthor'>User</label>
          <input type='text' class='form-control' id='newPostAuthor' aria-describedby='authorHelp' readonly placeholder='{{{name}}}' />
        </div>
        <div class='form-group col-sm-12'>
          <label for='newPostTitle'>Title</label>
          <input type='text' class='form-control' id='newPostTitle' aria-describedby='newPostHelp' placeholder='Heading for the post' />
        </div>
        <div class='form-group col-sm-12'>
          <label for='newPostText'>Write out your post</label>
          <textarea class='form-control' id='newPostText' placeholder='Keep it under 255 characters!' rows='9'></textarea>
        </div>
        <div></div>
        <div class='form-group col-sm-12'>
          <button type='submit' class='btn btn-danger btn-block align-center' id='loginBtn'>Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src='./js/newPost.js'></script>