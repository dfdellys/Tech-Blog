<div class='row justify-content-md-center'>
  {{#each posts as |post|}}
    <div class='col-sm-8'>
      <div class='row justify-content-md-center'>
        <div class='card mx-auto' id='postPreviewCards'>
          <a href='/post/{{id}}'>
            <div class='card-header'>
              <p>
                <span>
                  <h3>{{{post.title}}}</h3>
                </span>
                by
                {{{post.user.name}}}
                on
                {{format_date post.date_created}}
              </p>
            </div>
          </a>
        </div>
      </div>
    </div>
  {{/each}}
</div>